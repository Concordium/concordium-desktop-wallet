{
  "name": "concordium-desktop-wallet",
  "productName": "Concordium Wallet",
  "description": "concordium-desktop-wallet",
  "scripts": {
    "build": "concurrently \"yarn build-main\" \"yarn build-renderer\" \"yarn build-preload\"",
    "build-dll": "cross-env NODE_ENV=development webpack --config ./configs/webpack.config.renderer.dev.dll.js --colors",
    "build-e2e": "cross-env E2E_BUILD=true yarn build",
    "build-main": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.main.prod.js --colors",
    "build-main-dev": "cross-env TARGET_NET=stagenet NODE_ENV=development webpack --config ./configs/webpack.config.main.dev.js --colors --progress && yarn build-preload-dev",
    "build-preload-dev": "cross-env TARGET_NET=stagenet NODE_ENV=development webpack --config ./configs/webpack.config.preload.dev.js --colors --progress",
    "build-preload": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.preload.prod.js --colors",
    "build-proto": "sh ./internals/scripts/build_protos.sh",
    "build-renderer": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.renderer.prod.js --colors",
    "build-renderer-dev": "cross-env TARGET_NET=stagenet NODE_ENV=development webpack --config configs/webpack.config.renderer.dev.js --colors --progress",
    "build-storybook": "build-storybook",
    "clean": "yarn clean-scss-modules",
    "clean-scss-modules": "rimraf ./**/*.module.scss.d.ts",
    "generate-verification-assets": "node ./scripts/fileDigest.js -k",
    "lint": "eslint . --cache --ext .ts,.tsx --max-warnings 0",
    "lint-fix": "yarn --silent lint --fix; exit 0",
    "lint-styles": "stylelint --ignore-path .eslintignore '**/*.*(css|scss)' --syntax scss",
    "lint-styles-fix": "yarn --silent lint-styles --fix; exit 0",
    "make-disclaimer": "yarn --prod true licenses generate-disclaimer > scripts/disclaimer.txt && node scripts/disclaimer.js && rimraf ./scripts/disclaimer.txt",
    "name": "echo $npm_package_productName-$TARGET_NET",
    "package": "yarn build && node ./scripts/build.js",
    "package-mac-no-notarize": "export NOTARIZE=skip && yarn build && node ./scripts/build.js",
    "postinstall": "node internals/scripts/CheckNativeDep.js && electron-builder install-app-deps && yarn build-dll && opencollective-postinstall  && sh ./internals/scripts/build_protos.sh",
    "postlint-fix": "prettier --ignore-path .eslintignore --single-quote --write '**/*.{ts,tsx,js,jsx,json,html,yml}'",
    "postlint-styles-fix": "prettier --ignore-path .eslintignore --single-quote --write '**/*.{css,scss}'",
    "preinstall": "node ./internals/scripts/CheckYarn.js",
    "start": "node ./internals/scripts/CheckPortInUse.js && yarn build-main-dev && cross-env START_HOT=1 yarn start-renderer-dev",
    "start:prod": "cross-env TARGET_NET=stagenet NODE_ENV=production electron ./app/main.prod.js",
    "start:dev": "cross-env TARGET_NET=stagenet START_HOT=1 NODE_ENV=development electron ./app/main.dev.js",
    "start:dev-debug": "cross-env TARGET_NET=stagenet yarn start:dev --inspect=5858 --remote-debugging-port=9223",
    "start-renderer-dev": "cross-env TARGET_NET=stagenet NODE_ENV=development webpack-dev-server --config configs/webpack.config.renderer.dev.js --colors --progress",
    "storybook": "start-storybook -p 6006",
    "test": "cross-env jest",
    "test-tsc": "yarn tsc --noEmit",
    "test-all": "yarn lint && yarn test-tsc && yarn build && yarn test",
    "test-e2e": "node ./internals/scripts/CheckBuildsExist.js && cross-env NODE_ENV=test testcafe electron:./app ./test/e2e/HomePage.e2e.ts",
    "test-e2e-live": "node ./internals/scripts/CheckBuildsExist.js && cross-env NODE_ENV=test testcafe --live electron:./app ./test/e2e/HomePage.e2e.ts",
    "test-watch": "yarn test --watch",
    "down": "ts-node --project scripts/migrations/tsconfig.json -r tsconfig-paths/register ./scripts/migrations/down.ts",
    "up": "ts-node --project scripts/migrations/tsconfig.json -r tsconfig-paths/register ./scripts/migrations/up.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix"
    ],
    "{*.json,.{eslintrc,prettierrc,stylelintrc}}": [
      "prettier --ignore-path .eslintignore --parser json --write"
    ],
    "*.{css,scss}": [
      "stylelint --ignore-path .eslintignore --syntax scss --fix"
    ],
    "*.{html,md,yml}": [
      "prettier --ignore-path .eslintignore --single-quote --write"
    ]
  },
  "build": {
    "appId": "com.Concordium.Software.DesktopWallet",
    "files": [
      "dist/",
      "node_modules/",
      "app.html",
      "main.prod.js",
      "main.prod.js.map",
      "package.json",
      "preload.js"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "sign": false
    },
    "win": {
      "artifactName": "${name}-${version}.${ext}",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "artifactName": "${name}-${version}.${ext}",
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    },
    "mac": {
      "artifactName": "${name}-${version}.${ext}",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "asarUnpack": [
        "**/*.node"
      ]
    },
    "afterSign": "scripts/notarize.js",
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "extraResources": [
      "./resources/**",
      "./app/database/migrations/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "Concordium",
      "repo": "concordium-desktop-wallet"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Concordium/concordium-desktop-wallet"
  },
  "author": {
    "name": "Concordium Software",
    "email": "support@concordium.software",
    "url": "https://concordium.com"
  },
  "license": "MIT",
